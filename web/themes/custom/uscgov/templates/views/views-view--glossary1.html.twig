{%
  set classes = [
    'view',
    'glossary',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

{{ attach_library('uscgov/glossary') }}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if title %}
    {{ title }}
  {% endif %}
  {{ title_suffix }}
  {% if header %}
    <div class="view-header">
      {{ header }}
    </div>
  {% endif %}

  {% if rows %}

    <nav class="glossary__nav" aria-label="{{ 'Glossary by letter'|t }}">
      {% for row in rows %}
        {% set glossary_title = row['#title']|striptags|trim %}
        {% if glossary_title %}
          <a class="glossary__nav-item" href="#letter-{{ glossary_title|lower }}">
            {{ glossary_title }}
          </a>
        {% endif %}
      {% endfor %}
    </nav>

    <dl class="glossary__content">
      {{ rows }}
    </dl>
  {% elseif empty %}
    <div class="view-empty">
      {{ empty }}
    </div>
  {% endif %}

  {% if footer %}
    <div class="view-footer">
      {{ footer }}
    </div>
  {% endif %}
</div>
