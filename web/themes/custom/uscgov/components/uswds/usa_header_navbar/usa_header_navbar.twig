{%
  set classes = [
    'usa-navbar',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  <div class="usa-logo">
    {% if site_logo_url %}
      <a href="{{ path('<front>') }}" rel="home" class="site-logo">
        <img src="{{ site_logo_url }}" alt="{{ 'Home'|t }}" />
      </a>
    {% endif %}
    <em class="usa-logo__text">
      {% if site_name %}
        <a href="{{ path('<front>') }}" rel="home"title="{{ site_name }}">
          {{ site_name }}
        </a>
      {% endif %}
      {% if site_slogan %}
        <div class="site-slogan">{{ site_slogan }}</div>
      {% endif %}
    </em>
  </div>
  <button type="button" class="usa-menu-btn">
    {{ 'Menu'|t }}
  </button>
</div>
