{% import _self as menus %}

<nav aria-label="{{ 'Primary Footer navigation'|t }}" class="footer-menu-above">
  {{ menus.menu_links(items, attributes, 0) }}
</nav>

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}

  {# We don't currently support nested menus in per the design. #}
  {% if items and menu_level == 0 %}
    <ul{{ attributes.addClass('footer-menu-above__menu') }}>
      {% for item in items %}
        <li{{ item.attributes.addClass('footer-menu-above__item') }}>
          {{ link(item.title, item.url) }}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
