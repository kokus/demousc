<div class="homepage-hero">
  <div class="homepage-hero__background-wrapper">
    {% block homepage_hero_image %}{% endblock %}
  </div>
  <div class="homepage-hero__container container--small">
    <div class="homepage-hero__first">
      <h1 class="homepage-hero__title">
        {{ title }}
      </h1>
      <p class="homepage-hero__description">
        {{ description }}
      </p>
      <div class="homepage-hero__cta-wrapper">
        {% block homepage_hero_link %}{% endblock %}
      </div>
    </div>
    <div class="homepage-hero__second">
      {{ include('uscgov:court-finder-block') }}
    </div>

    {% if hero_block_secondary_title|render %}
      <div class="homepage-hero__third">
        {% embed 'uscgov:hero-block-secondary' with {
            title: hero_block_secondary_title,
            description: hero_block_secondary_description,
            cta: block('hero_block_secondary_cta'),
          }
        %}
          {% block cta %}
            {{ cta|raw }}
          {% endblock %}
        {% endembed %}
      </div>
    {% endif %}
  </div>
</div>
